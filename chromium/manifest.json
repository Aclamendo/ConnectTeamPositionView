{
    "name": "Connecteam Position View",
    "version": "0.0.5",
    "description": "Automaticaly injects the necessary code to allow position view csv download",
    "manifest_version": 3,
    "permissions": ["storage", "tabs", "activeTab", "scripting"],
    "host_permissions": ["https://app.connecteam.com/*"],
    "content_scripts": [
        {
            "matches": ["https://*.connecteam.com/*"],
            "js": ["pageAction.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }

}